@page "/todo"

<h3>Todo</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>@todo.Title</li>
    }
</ul>

<input type="text" placeholder="Build a Blazor Todo Web Appp" @bind="newTodo">
<button @onclick="AddTodo">Add in Todo's List</button>

@code {
    private List<TodoItem> todos = new();
    private string? newTodo;

    private void AddTodo(){
        todos.Add(new TodoItem {Title = newTodo});
        newTodo = string.Empty;
    }
}
